<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Final_Project_in_Asp.net_MVC_2021</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <header>
        <div class="myProfile">
            <img class="myImage" src="~/Images/myPic.jpg" alt="No Images" style=" width: 100%;" />
            <h3 class="myName">JOHN ALMIROL</h3>
            <p class="myTittle">Web Designer Developer</p>
        </div>

        <nav class="myMenu">
            <ul>
                <li>
                    <a class="nav-link text-dark" asp-area="" asp-page="/Index">HOME</a>
                </li>

                <li>
                    <a class="nav-link text-dark" asp-area="" asp-page="/About1">ABOUT ME</a>
                </li>

                <li>
                    <a class="nav-link text-dark" asp-area="" asp-page="/Resume">MY RESUME</a>
                </li>

                <li>
                    <a class="nav-link text-dark" asp-area="" asp-page="/Services">MY SERVICES</a>
                </li>

                <li>
                    <a class="nav-link text-dark" asp-area="" asp-page="/Contact">CONTACT ME</a>
                </li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
